.toggle
  width 50px
  height 24px
  position relative
  cursor: pointer
  
  & span
    display block
    position absolute
    height 4px
    width 100%
    background: #fff
    border-radius 4px
    opacity 1
    right 0
    transform: rotate(0deg)
    transition: .25s ease-in-out
    transform-origin right center
  
  & span:nth-child(1) 
    top 0px

  & span:nth-child(2) 
    top 10px

  & span:nth-child(3) 
    top 20px

  &.js-toggle--open span:nth-child(1) 
    transform rotate(-45deg)
    width 29px
    right 15px

  &.js-toggle--open span:nth-child(2) 
    width 0%
    opacity 0

  &.js-toggle--open span:nth-child(3) 
    transform rotate(45deg)
    width 29px
    right 15px
    
// Mediaqueries

@media (max-width lg - 1)
  
  .toggle
    display block
    
@media (min-width lg)

  .toggle
      display none