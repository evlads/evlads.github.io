.main-nav
  flex-grow 1
  
  padding-right 10px
  padding-left 10px 

  &__list
    no-list()
    display flex
    justify-content space-between
       
  &__item
    position relative
    
  &__link
    color #fff
    font-size 18px
    line-height 1  
    &:active
      opacity .3
      &:after
        background-color transparent
    &:after
      position absolute
      content ''
      bottom -10px
      display block
      height 2px
      width 0
      background-color #fff
      transition: width .3s
    &:hover
      &:after
        width 100%
        
// Mediaqueries

@media (max-width lg - 1)

  .main-nav
    display none
    &__link:after
      display none 
      
  .js-main-nav--open-toggle
    display flex
    width 100%
    padding-right 0
    padding-left 0
    .main-nav__list
      flex-direction column
      width 100%
      .main-nav__link
        display flex
        align-items center
        justify-content: center
        width 100%
        height 64px
        &:active
          opacity 1
          color rgba(255,255,255, .3)
        &:hover
          color #d22856
        
        background-color #283645
        border-top 1px solid #485461
        border-bottom 1px solid #000