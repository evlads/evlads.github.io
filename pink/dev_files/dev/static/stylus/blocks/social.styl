.social
  
  &__list
    no-list()
    display flex
    justify-content space-between
  
  &__item 
    margin-right 12px
    &:last-child
      margin-right 0
  
  &__link
    display flex
    align-items center
    justify-content center
    border 3px solid #e9ebec
    border-radius 50px
    width 50px
    height 50px
    cursor pointer
    transition border-color .5s
    &:hover
      border-color #283645
    &:active
      border-color #e9ebec
      opacity .3
      
  &__link-icon
    width 18px
    height 18px