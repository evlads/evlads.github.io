.contacts
  position relative
  text-align center
  padding-top 64px
  
  &__header
    position relative
    
  &__title
    font-size 50px
    font-weight light_fnt
    color #283645
    margin 0
    line-height 1.2
  
  &__list
    no-list()
    margin-top 55px
    display flex
  
  &__item
    width 300px
  
  &__item-header 
    margin-bottom 20px
    
    display block
    font-size 18px
    color #283645
    font-weight bold_fnt
  
  &__item-text
    display block
    font-size 24px
    line-height 1.3
    font-weight light_fnt
    color #d22856
  
  &__polygon
    position absolute
    bottom -9vw
    left 0
    width 100vw
    height 9vw
    
    z-index 1
    
  #map
    height 520px
    
  .map 
    height 500px
    background-color #000
    
    

@media (max-width md - 1)

  .contacts 
    padding-top 45px
    
    &__title
      font-size 24px
    
    &__item
      margin-bottom 15px
    
    &__item:nth-child(2)
      order +1
    
    &__item-header 
      margin-bottom 0px
    
    &__list
      margin-top 35px
      flex-direction column
    
@media (min-width md) and (max-width lg - 1)

  .contacts
    padding-top 45px
      
    &__title
      font-size 40px
      
    &__list
      margin-top 40px
      
      flex-wrap wrap
      justify-content center
    
    &__item-header 
      margin-bottom 0px
      
    &__item:nth-child(2)
      margin-top 45px
      order +1